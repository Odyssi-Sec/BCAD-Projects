@model PROG6212.POE.ST10153536.Models.Modules

@{
    ViewData["Title"] = "Edit Module";
}

<style>
    .container {
        margin-top: 50px;
    }

    h2 {
        color: #007bff;
        font-weight: bold;
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        font-weight: bold;
        color: #333;
    }

    .form-control {
        width: 70%;
        max-width: 300px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
</style>

<div class="container mt-5">
    <h2>Edit Module - @Model.Code</h2>

    <form asp-action="Edit" method="post">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-primary">Save Changes</button>

        <div class="form-group">
            <label>User ID:</label>
            <p>@Model.UserId</p>
            <input asp-for="UserId" type="hidden" />
        </div>

        <div class="form-group">
            <label asp-for="Code">Module Code:</label>
            <input asp-for="Code" class="form-control" readonly />
        </div>

        <div class="form-group">
            <label asp-for="Name">Module Name:</label>
            <input asp-for="Name" class="form-control" required />
        </div>

        <div class="form-group">
            <label asp-for="Credits">Credits:</label>
            <input asp-for="Credits" class="form-control" required />
        </div>

        <div class="form-group">
            <label asp-for="ClassHoursPerWeek">Class Hours per Week:</label>
            <input asp-for="ClassHoursPerWeek" class="form-control" required />
        </div>

        <div class="form-group">
            <label asp-for="StartDate">Start Date:</label>
            <input asp-for="StartDate" type="date" class="form-control" required />
        </div>

        <div class="form-group">
            <label asp-for="NumberOfWeeks">Number of Weeks:</label>
            <input asp-for="NumberOfWeeks" class="form-control" required />
        </div>

        <div class="form-group">
            <label asp-for="HoursSpent">Hours Spent:</label>
            <input asp-for="HoursSpent" class="form-control" required />
        </div>

        <div class="form-group">
            <label asp-for="SelfStudyHours">Self-Study Hours per Week:</label>
            <input asp-for="SelfStudyHours" class="form-control" readonly />
        </div>

        <input asp-for="ModuleId" type="hidden" />

    </form>
</div>

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
